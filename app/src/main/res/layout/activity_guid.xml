<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_guid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="flashlight.perfect.com.newsclient.activitys.GuidActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_activity_guid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_guid_activity_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/adware_style_default"/>
        <ImageView
            android:id="@+id/img_guid_activity_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/adware_style_default"/>
        <ImageView
            android:id="@+id/img_guid_activity_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/adware_style_default"/>
        <ImageView
            android:id="@+id/img_guid_activity_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/adware_style_default"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_activity_guid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="30dp"
        android:text="直接跳过"/>


</RelativeLayout>
